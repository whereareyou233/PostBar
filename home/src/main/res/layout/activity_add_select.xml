<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:fitsSystemWindows="true"
   >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/return122"
        android:layout_margin="20dp"
        android:id="@+id/bt_return_add"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="150dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_collect"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                app:cardCornerRadius="100dp"
                android:layout_marginLeft="20dp"
                android:layout_height="190dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_collect1"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:textStyle="bold"
    android:textSize="40dp"
    android:background="@color/cardview_light_background"
    android:textColor="#ca9D8AEA"
    android:text="邮票收藏"/>

    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:background="#ca9D8AEA"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_weight="0.7">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bt_new"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:alpha="0.6"
            app:cardCornerRadius="100dp">

            <TextView
                android:id="@+id/add_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/cardview_light_background"
                android:background="#ca9D8AEA"
                android:text="新建"
                android:textSize="20dp"
                android:gravity="center"
                />

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bt_old"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:alpha="0.6"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/cardview_light_background"
            android:background="#ca9D8AEA"
            android:text="已有"
            android:textSize="20dp"
            android:gravity="center"
            />

    </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>